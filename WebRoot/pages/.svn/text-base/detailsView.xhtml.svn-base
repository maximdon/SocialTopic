<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:jawr="https://jawr.dev.java.net/jsf/facelets"
	xml:lang="en" lang="en">
	
	<f:view contentType="text/html">
		<head>
			<title>iMatch - #{detailsViewBean.currentTicket.id}</title>
			<link rel="shortcut icon" href="../favicon.ico"></link>
			
			<script type="text/javascript">
				var iMatchNS = new Object();
				var iMatch = new Object();
			</script>
			
			<jawr:style src="/bundles/all.css" />
		    <jawr:script src="/bundles/lib.js" useRandomParam="false" />
		    <jawr:script src="/bundles/iMatch.js" />
		    <jawr:script src="/bundles/dwrall.js"/>
			<jawr:script src="/bundles/autocomplete.js"/>
		</head>
		<body class="detailsViewBody">
			<f:view>
				<h:form id="searchForm">
					<ui:insert name="body">
						<div class="main">
							<div id="iMatchResults">
								<div class="searchDetails">
									<span>(<h:outputText value="#{detailsViewBean.currentTicket.id}" />) Ticket title:</span> <span class="highlight"><h:outputText escape="false" value="#{detailsViewBean.currentTicket.title}" /></span>
								</div>
								<div style="overflow: auto;" class="highlight">
									<h:outputText escape="false" value="#{detailsViewBean.currentTicket.preview}"/>
								</div>
							</div>
							<div>
								<h:messages id="messages" errorClass="errorMessages"></h:messages>
							</div>
						</div>
					</ui:insert>
				</h:form>
			</f:view>
		</body>
	</f:view>
</html>
